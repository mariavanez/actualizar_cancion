package com.maria.servicios;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.maria.repositorios.RepositorioCanciones;

@Service
public class ServicioCanciones {

	@Autowired
	public RepositorioCanciones repoCanciones;
	
	public void obtenerTodasLasCanciones() {
		repoCanciones.findAll();
	}
	
	public void obtenerCancionPorId(Long id) {
		repoCanciones.findById(id).orElse(null);
	}
}
